<% layout("/layouts/boilerplate") %>

<div class="row mt-3"> <!--Putting the entire form in side row-->
    <!--A from which will seand a detils to a create route of new listing-->
  <div class="col-8 offset-2"><!--Makiing blocks as column-->
    <h3>Create A new Listings</h3>
 <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"> <!--Written novalidate and addeed needsvalidation class so that to  remove the custome style  and add bootstrap vallidation  also enctype= multipart/ data so that form can send files also-->
  <div class="mb-3"> 
    <label for="Title" class="form-label">Tittle</label>
    <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required>
    <div class="valid-feedback">Title Looks Good!</div> <!--The class wich will display a messge when ever the tiile will be enetered-->
    <div class="invalid-feedback">Please Enter Valid Feedback</div> <!--Invalid-feedback class will show the messge when ever th ettitle will not be enetered-->
   </div>
   <div class="mb-3">
     <label for="description" class="form-label">Description</label>
     <textarea name="listing[description]" placeholder="Enter description" type="text" class="form-control" required ></textarea>
      <div class="valid-feedback">Description Looks Good!</div> <!--The class wich will display a messge when ever the tiile will be enetered-->
    <div class="invalid-feedback">Please Enter Valid Description</div> <!--Invalid-feedback class will show the messge when ever th ettitle will not be enetered-->
   </div>

   <div class="mb-3">
     <label for="image" class="form-label">Upload Listing Image</label>
     <input name="listing[image]" placeholder="Enter image url link" type="file" class="form-control" required><!--makinig our image field type file so gthth image can be uploaded-->
    </div>

   <div class="row">
     <div class="mb-3 col-mid-4">
     <label for="price" class="form-label">Price</label>
     <input name="listing[price]" placeholder="Enter price" type="text" class="form-control" required>
      <div class="valid-feedback">Price Looks Good!</div> <!--The class wich will display a messge when ever the tiile will be enetered-->
    <div class="invalid-feedback">Please Enter Valid Price</div> <!--Invalid-feedback class will show the messge when ever th ettitle will not be enetered-->
   </div>
   
   <div class="mb-3 col-mid-8">
     <label for="country" class="form-label">Country</label>
     <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required >
      <div class="valid-feedback">Country Looks Good!</div> <!--The class wich will display a messge when ever the tiile will be enetered-->
    <div class="invalid-feedback">Please Enter Valid Country</div> <!--Invalid-feedback class will show the messge when ever th ettitle will not be enetered-->
   </div>

      
   </div>


  <div class="mb-3">
     <label for="location" class="form-label"> Location</label>
     <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
      <div class="valid-feedback">Location Looks Good!</div> <!--The class wich will display a messge when ever the tiile will be enetered-->
    <div class="invalid-feedback">Please Enter Valid Location</div> <!--Invalid-feedback class will show the messge when ever th ettitle will not be enetered-->
  </div>

    <button type="submit" class="btn btn-danger add-btn">Submit</button>

    <br> <br>
 </form>
 </div>
 </div>



